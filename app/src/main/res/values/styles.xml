<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.Button.Blue">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/blue_button_elliptic</item>
    </style>
    <style name="AppTheme.TextView">
    </style>
    <style name="AppTheme.TextView.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#3d3d3d</item>
        <item name="android:fontFamily">@ffont/roboto_bold</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.EditText.Elliptic">
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textColorHint">#c1c1c1</item>
        <item name="android:background">@drawable/grey_edittext_elliptic</item>
    </style>

    <style name="AppTheme.Button.Link">
        <item name="android:textColor">#019AE8</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--STYLES-->
    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/PopupToolbarTheme</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="PopupToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
